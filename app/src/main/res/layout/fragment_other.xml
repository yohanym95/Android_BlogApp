<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtherFragment"
    android:orientation="vertical"
    android:id="@+id/otherFragment">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/crdMovies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:clickable="true"
        card_view:cardBackgroundColor="@android:color/background_light"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="false"
        card_view:layout_row="0"
        card_view:layout_rowWeight="1"
        card_view:layout_column="0"
        card_view:layout_columnWeight="1"
        card_view:layout_gravity="fill">

        <TextView
            android:id="@+id/tvmovies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:gravity="center"
            android:text="Movies"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/crdGames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        card_view:cardBackgroundColor="@android:color/background_light"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="false"
        card_view:layout_row="0"
        card_view:layout_rowWeight="1"
        card_view:layout_column="1"
        card_view:layout_columnWeight="1"
        card_view:layout_gravity="fill">

        <TextView
            android:id="@+id/tvGames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:gravity="center"
            android:text="Games"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/crdSports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:clickable="true"
            card_view:cardBackgroundColor="@android:color/background_light"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="false"
            card_view:layout_row="1"
            card_view:layout_rowWeight="1"
            card_view:layout_columnWeight="1"
            card_view:layout_column="0"
            card_view:layout_gravity="fill">

            <TextView
                android:id="@+id/tvSports"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:gravity="center"
                android:text="Sports"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/crdAnimation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            card_view:cardBackgroundColor="@android:color/background_light"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="false"
            card_view:layout_row="1"
            card_view:layout_column="1"
            card_view:layout_rowWeight="1"
            card_view:layout_columnWeight="1"
            card_view:layout_gravity="fill">

            <TextView
                android:id="@+id/tvAnimation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:gravity="center"
                android:text="Animation සිංහලෙන්"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/crdtechNewsEnglish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:clickable="true"
            card_view:cardBackgroundColor="@android:color/background_light"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="false"
            card_view:layout_rowWeight="1"
            card_view:layout_row="2"
            card_view:layout_column="0"
            card_view:layout_columnWeight="1"
            card_view:layout_gravity="fill">

            <TextView
                android:id="@+id/tvTechEnglish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:gravity="center"
                android:text="  Tech News - English  "
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/crdtechNewsSinhala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            card_view:cardBackgroundColor="@android:color/background_light"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="false"
            card_view:layout_row="2"
            card_view:layout_rowWeight="1"
            card_view:layout_column="1"
            card_view:layout_columnWeight="1"
            card_view:layout_gravity="fill">

            <TextView
                android:id="@+id/tvTechSinhala"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:gravity="center"
                android:text="Tech News - සිංහලෙන්"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/crdtechNewsTamil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:clickable="true"
            card_view:cardBackgroundColor="@android:color/background_light"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="false"
            card_view:layout_row="3"
            card_view:layout_rowWeight="1"
            card_view:layout_columnWeight="1"
            card_view:layout_column="0"
            card_view:layout_gravity="fill">

            <TextView
                android:id="@+id/tvTechTamil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:gravity="center"
                android:text="  Tech News - Tamil   "
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/crdtechnology"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            card_view:cardBackgroundColor="@android:color/background_light"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="false"
            card_view:layout_row="3"
            card_view:layout_rowWeight="1"
            card_view:layout_column="1"
            card_view:layout_columnWeight="1"
            card_view:layout_gravity="fill">

            <TextView
                android:id="@+id/tvTechnology"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:gravity="center"
                android:text="Technology"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/crdKibuli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:clickable="true"
            card_view:cardBackgroundColor="@android:color/background_light"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="false"
            card_view:layout_row="4"
            card_view:layout_column="0"
            card_view:layout_rowWeight="1"
            card_view:layout_columnWeight="1"
            card_view:layout_gravity="fill">

            <TextView
                android:id="@+id/tvKibuli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:gravity="center"
                android:text="Devices"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/crdPOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            card_view:cardBackgroundColor="@android:color/background_light"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="false"
            card_view:layout_row="4"
            card_view:layout_column="1"
            card_view:layout_rowWeight="1"
            card_view:layout_columnWeight="1"
            card_view:layout_gravity="fill">

            <TextView
                android:id="@+id/tvOthers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:gravity="center"
                android:text="Entertainment"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>

    </android.support.v7.widget.GridLayout>

</LinearLayout>