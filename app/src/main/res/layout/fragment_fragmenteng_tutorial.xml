<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TutorialFragment"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3EFEF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F3EFEF"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/crdKotlin"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    card_view:cardBackgroundColor="@android:color/background_light"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="false">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:src="@mipmap/kotlin_background" />

                    <TextView
                        android:id="@+id/tvKotlin"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginTop="30dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="Kotlin"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/crdNetwork"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    card_view:cardBackgroundColor="@android:color/background_light"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="false">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:src="@mipmap/network1_background" />

                    <TextView
                        android:id="@+id/tvNetwork"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="Networking"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/crdPython"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    card_view:cardBackgroundColor="@android:color/background_light"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="false">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:src="@mipmap/python_foreground" />

                    <TextView
                        android:id="@+id/tvPython"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="Python"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="#F3EFEF">

                <androidx.cardview.widget.CardView
                    android:id="@+id/crdCloudComputing"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="7dp"
                    card_view:cardBackgroundColor="@android:color/background_light"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="false">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        card_view:srcCompat="@drawable/ic_cloud_done_black_24dp" />

                    <TextView
                        android:id="@+id/tvCloud"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="Cloud Computing"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/crdGit1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="7dp"
                    card_view:cardBackgroundColor="@android:color/background_light"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="false">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:src="@mipmap/git1_background" />

                    <TextView
                        android:id="@+id/tvGit1"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="GIT"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/crdcrdJavascript"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="7dp"
                    card_view:cardBackgroundColor="@android:color/background_light"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="false">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:src="@mipmap/javascript1_background" />


                    <TextView
                        android:id="@+id/tvJavaScript"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="JavaScript"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>




</RelativeLayout>


